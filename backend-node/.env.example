# Firebase Service Account (Required for Backend)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key_here
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com

# Database Configuration
FIRESTORE_DATABASE_URL=https://firestore.googleapis.com/v1/projects/your_project_id

# Payment Processing (DodoPayments)
DODO_PAYMENTS_API_KEY=your_dodo_payments_key_here
DODO_PAYMENTS_ENDPOINT=https://api.dodopayments.com

# AI Services
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_REFERER=https://mentiscope.vercel.app

# Email Service (For Support & Notifications)
SENDGRID_API_KEY=your_sendgrid_key_here
SUPPORT_EMAIL=support@mentiscope.com

# CORS Configuration
ALLOWED_ORIGINS=https://mentiscope.vercel.app,https://mentiscope.onrender.com,http://localhost:3000

# Server Configuration
PORT=5000
NODE_ENV=production

# Security
JWT_SECRET=your_jwt_secret_here
